<%- Html.script([
		'facebook/login.js'
]) %>

<%- Html.tag('h2', 'Login') %>

<%- Form.create('User', { method: 'POST', class: 'form-horizontal' }) %>
<%- Form.input('username', { placeholder: 'Username' }) %>
<%- Form.input('password', { placeholder: 'Password' }) %>
<%- Form.end('Login') %>

<script type="text/javascript">
	$(document).ready(function($){
		$('#Username').focus();

		var reset_password = 'Reset Password';
        $('input[name=password]').parent('div').after($('<div />').addClass('col-lg-2 reset-password').html(
            $('<a />').attr('href', '/user/reset_password').html(reset_password)
        ));

        $('#submit').parent('div').removeClass('col-lg-4').addClass('col-lg-1');
    });
</script>

<style type="text/css">
	@media (min-width: 1200px) {
		.reset-password {
			padding-top: 9px;
			padding-left: 0;
		}
	}
</style>